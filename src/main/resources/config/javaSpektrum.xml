<?xml version="1.0" encoding="UTF-8"?>
<tns:inputSchema xmlns:tns="http://www.example.org/inputSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/inputSchema ../inputSchema.xsd ">
	<tns:xpath>
		<tns:expressionWithReplaces>string-join((//*[@class='module-price-badge' and .//*[contains(./@alt, '2017')]]/html:a/@href)[{0}], '')</tns:expressionWithReplaces>
		<tns:numberStrategy>
			<tns:from>1</tns:from>
			<tns:to>6</tns:to>
		</tns:numberStrategy>
		<tns:next>
			<tns:expressionWithReplaces>concat(string-join(//html:div[@class='col-md-6']/html:a/@href, ''), '/page/3')</tns:expressionWithReplaces>
			<tns:numberStrategy>
				<tns:from>1</tns:from>
				<tns:to>1</tns:to>
			</tns:numberStrategy>
			<tns:next>
				<tns:expressionWithReplaces>string-join((//html:div[@data-name='page']/html:a/@href[contains(., 'de/profiles')])[{0}], '')</tns:expressionWithReplaces>
				<tns:countStrategy>
					<tns:xpath>count(//html:div[@data-name='page']/html:a/@href[contains(., 'de/profiles')])</tns:xpath>
				</tns:countStrategy>
				<tns:next>
					<tns:expressionWithReplaces>string-join((//html:a/@data-url[contains(., 'de/profiles')])[1], '')</tns:expressionWithReplaces>
					<tns:numberStrategy>
						<tns:from>1</tns:from>
						<tns:to>1</tns:to>
					</tns:numberStrategy>
				</tns:next>
			</tns:next>
		</tns:next>
	</tns:xpath>

	<tns:titleXpath>normalize-space(string-join(//html:h1//html:strong, ''))</tns:titleXpath>
	<tns:authorXpath>normalize-space(string-join((//html:h1/following-sibling::html:p/html:strong[./html:br])[1]//text(), ''))</tns:authorXpath>
	
	<tns:categoryXpath>concat('placeholder', '')</tns:categoryXpath>
	<tns:startingHtmlPage>https://bc-v3.pressmatrix.com/de/profiles/4967c6d5eae1/editions</tns:startingHtmlPage>
	<tns:baseUrl>https://bc-v3.pressmatrix.com</tns:baseUrl>
	<tns:sortCategories>false</tns:sortCategories>
</tns:inputSchema>
