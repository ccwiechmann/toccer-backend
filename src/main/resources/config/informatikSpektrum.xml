<?xml version="1.0" encoding="UTF-8"?>
<tns:inputSchema xmlns:tns="http://www.example.org/inputSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/inputSchema inputSchema.xsd ">
	<tns:xpath>
		<tns:expressionWithReplaces>id('volume39')/html:div[2]/html:div/html:div/html:ul/html:li[{0}]/html:a/@href</tns:expressionWithReplaces>
		<tns:numberStrategy>
			<tns:from>1</tns:from>
			<tns:to>6</tns:to>
		</tns:numberStrategy>
		<tns:next>
			<tns:expressionWithReplaces>id('kb-nav--main')/html:div[3]/html:ol/html:li[{0}]/html:div/html:h3/html:a/@href</tns:expressionWithReplaces>
			<tns:countStrategy>
				<tns:xpath>count(id('kb-nav--main')/html:div[3]/html:ol/html:li)</tns:xpath>
			</tns:countStrategy>
		</tns:next>
	</tns:xpath>

	<tns:titleXpath>//*[@class="ArticleTitle"]</tns:titleXpath>
	<tns:authorXpath>string-join(//*[@class="AuthorName_container"]/node()[not(contains(@class, 'popup'))], ', ')</tns:authorXpath>
	<tns:pageXpath>substring-before(substring(//*[@class="ArticleCitation_Pages"]/text(), 5), '-')</tns:pageXpath>
	<tns:volumeXpath>substring-before(substring(//*[@class="ArticleCitation_Issue"]/text(), 8), ',')</tns:volumeXpath>
	<tns:categoryXpath>substring-before(concat(//html:header/html:strong, ' '), ' ')</tns:categoryXpath>

	<tns:startingHtmlPage>https://link.springer.com/journal/volumesAndIssues/287</tns:startingHtmlPage>
	<tns:baseUrl>https://link.springer.com</tns:baseUrl>
	<tns:urlSuffix>?view=classic</tns:urlSuffix>
	<tns:sortCategories>true</tns:sortCategories>
</tns:inputSchema>
