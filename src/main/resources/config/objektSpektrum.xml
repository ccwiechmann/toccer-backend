<?xml version="1.0" encoding="UTF-8"?>
<tns:inputSchema xmlns:tns="http://www.example.org/inputSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/inputSchema inputSchema.xsd ">
	<tns:xpath>
		<tns:expressionWithReplaces>string-join((//figure[@class='module-price-badge' and ./a/img[contains(./@alt, '2017')]]/a/@href)[{0}], '')</tns:expressionWithReplaces>
		<tns:numberStrategy>
			<tns:from>1</tns:from>
			<tns:to>6</tns:to>
		</tns:numberStrategy>
	</tns:xpath>

	<tns:titleXpath>normalize-space(string-join(//html:div[@class='col-sm-9']/html:h1/text(), ''))</tns:titleXpath>
	<tns:authorXpath>normalize-space(string-join(//html:div[@class='col-sm-12']/html:div[@class='content']/html:p[2]/text(), ''))</tns:authorXpath>
	
	<tns:categoryXpath>concat(normalize-space(string-join(substring-after(substring-before(//html:div[@class='issueInfo']/html:p/text()[1], '/2017'), ' - '), '')), ': ', normalize-space(substring-after(string-join(//html:div[@class='issueInfo']/html:p/text(), ''), '2017')))</tns:categoryXpath>
	<tns:startingHtmlPage>https://bc-v3.pressmatrix.com/de/profiles/4967c6d5eae1/editions</tns:startingHtmlPage>
	<tns:baseUrl>https://bc-v3.pressmatrix.com</tns:baseUrl>
	<tns:sortCategories>false</tns:sortCategories>
</tns:inputSchema>
